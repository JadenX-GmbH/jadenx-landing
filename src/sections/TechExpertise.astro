---
export interface Props {
  title?: string;
  stacks: Array<{
    category: string;
    technologies: string[];
  }>;
}

const { title = "Our Tech Expertise", stacks } = Astro.props;
---

<section class="container-max section-padding">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold mb-4">{title}</h2>
  </div>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {stacks.map((stack) => (
      <div class="card p-6">
        <h3 class="text-lg font-semibold mb-4">{stack.category}</h3>
        <ul class="space-y-2">
          {stack.technologies.map((tech) => (
            <li class="flex items-center space-x-2">
              <svg class="w-4 h-4 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm text-grey-300">{tech}</span>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
