---
export interface Props {
  title?: string;
  competences: Array<{
    title: string;
    description: string;
    icon: string;
  }>;
}

const { title = "Our Core Competences", competences } = Astro.props;
---

<section class="container-max section-padding">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold mb-4">{title}</h2>
  </div>
  <div class="grid md:grid-cols-3 gap-8">
    {competences.map((competence) => (
      <div class="card p-8 text-center group hover:scale-105 transition-transform duration-200">
        <div class="w-16 h-16 bg-primary rounded-lg flex items-center justify-center mx-auto mb-6 group-hover:bg-primary-hover transition-colors duration-200">
          <span class="text-2xl">{competence.icon}</span>
        </div>
        <h3 class="text-xl font-semibold mb-4">{competence.title}</h3>
        <p class="text-grey-300">{competence.description}</p>
      </div>
    ))}
  </div>
</section>
