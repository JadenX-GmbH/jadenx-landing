---
// Get current path for active link highlighting
const currentPath = Astro.url.pathname;
---

<header class="bg-background border-b border-white/10 sticky top-0 z-40 backdrop-blur-sm bg-background/80">
	<div class="container-max">
		<div class="flex items-center justify-between h-16 px-4 sm:px-6 lg:px-8">
			<!-- Logo -->
			<a
				href="/"
				class="flex items-center space-x-2 group"
				aria-label="JadenX - Home"
			>
				<div class="w-8 h-8 bg-primary rounded-md flex items-center justify-center group-hover:bg-primary-hover transition-colors duration-200">
					<span class="text-white font-bold text-sm">JX</span>
				</div>
				<span class="text-xl font-bold text-gradient">JadenX</span>
			</a>

			<!-- Desktop Navigation -->
			<nav class="hidden md:flex items-center space-x-8">
				<a
					href="/"
					class:list={[
						"relative px-3 py-2 text-sm font-medium transition-colors duration-200",
						currentPath === "/" ? "text-primary" : "text-grey-300 hover:text-white"
					]}
					aria-current={currentPath === "/" ? "page" : undefined}
				>
					Home
					{currentPath === "/" && (
						<span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary rounded-full"></span>
					)}
				</a>

				<a
					href="/custom-software/custom-software-development"
					class:list={[
						"relative px-3 py-2 text-sm font-medium transition-colors duration-200",
						currentPath === "/custom-software/custom-software-development" ? "text-primary" : "text-grey-300 hover:text-white"
					]}
					aria-current={currentPath === "/custom-software/custom-software-development" ? "page" : undefined}
				>
					Custom Software
					{currentPath === "/custom-software/custom-software-development" && (
						<span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary rounded-full"></span>
					)}
				</a>

				<a
					href="/we-connect-global-companies-with-innovative-startups"
					class:list={[
						"relative px-3 py-2 text-sm font-medium transition-colors duration-200",
						currentPath === "/we-connect-global-companies-with-innovative-startups" ? "text-primary" : "text-grey-300 hover:text-white"
					]}
					aria-current={currentPath === "/we-connect-global-companies-with-innovative-startups" ? "page" : undefined}
				>
					Venture Clienting
					{currentPath === "/we-connect-global-companies-with-innovative-startups" && (
						<span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary rounded-full"></span>
					)}
				</a>

				<a
					href="/products/overview"
					class:list={[
						"relative px-3 py-2 text-sm font-medium transition-colors duration-200",
						currentPath === "/products/overview" ? "text-primary" : "text-grey-300 hover:text-white"
					]}
					aria-current={currentPath === "/products/overview" ? "page" : undefined}
				>
					Products
					{currentPath === "/products/overview" && (
						<span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary rounded-full"></span>
					)}
				</a>

				<a
					href="/contact"
					class:list={[
						"relative px-3 py-2 text-sm font-medium transition-colors duration-200",
						currentPath === "/contact" ? "text-primary" : "text-grey-300 hover:text-white"
					]}
					aria-current={currentPath === "/contact" ? "page" : undefined}
				>
					Contact
					{currentPath === "/contact" && (
						<span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary rounded-full"></span>
					)}
				</a>
			</nav>

			<!-- Mobile Menu Button (Disclosure Pattern) -->
			<div class="md:hidden">
				<details class="group">
					<summary
						class="flex items-center justify-center w-10 h-10 rounded-md hover:bg-white/10 transition-colors duration-200 cursor-pointer focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background"
						aria-label="Toggle navigation menu"
					>
						<!-- Hamburger Icon -->
						<svg
							class="w-5 h-5 text-grey-300 group-open:text-primary transition-colors duration-200"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							aria-hidden="true"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M4 6h16M4 12h16M4 18h16"
								class="group-open:hidden"
							/>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M6 18L18 6M6 6l12 12"
								class="hidden group-open:block"
							/>
						</svg>
					</summary>

					<!-- Mobile Navigation Menu -->
					<div class="absolute top-full right-0 mt-2 w-64 bg-background/95 backdrop-blur-sm border border-white/10 rounded-lg shadow-xl py-2">
						<nav class="flex flex-col">
							<a
								href="/"
								class:list={[
									"px-4 py-3 text-sm font-medium transition-colors duration-200 border-l-4",
									currentPath === "/"
										? "text-primary border-primary bg-primary/10"
										: "text-grey-300 hover:text-white hover:bg-white/5 border-transparent"
								]}
								aria-current={currentPath === "/" ? "page" : undefined}
							>
								Home
							</a>

							<a
								href="/custom-software/custom-software-development"
								class:list={[
									"px-4 py-3 text-sm font-medium transition-colors duration-200 border-l-4",
									currentPath === "/custom-software/custom-software-development"
										? "text-primary border-primary bg-primary/10"
										: "text-grey-300 hover:text-white hover:bg-white/5 border-transparent"
								]}
								aria-current={currentPath === "/custom-software/custom-software-development" ? "page" : undefined}
							>
								Custom Software
							</a>

							<a
								href="/we-connect-global-companies-with-innovative-startups"
								class:list={[
									"px-4 py-3 text-sm font-medium transition-colors duration-200 border-l-4",
									currentPath === "/we-connect-global-companies-with-innovative-startups"
										? "text-primary border-primary bg-primary/10"
										: "text-grey-300 hover:text-white hover:bg-white/5 border-transparent"
								]}
								aria-current={currentPath === "/we-connect-global-companies-with-innovative-startups" ? "page" : undefined}
							>
								Venture Clienting
							</a>

							<a
								href="/products/overview"
								class:list={[
									"px-4 py-3 text-sm font-medium transition-l-4 border-l-4",
									currentPath === "/products/overview"
										? "text-primary border-primary bg-primary/10"
										: "text-grey-300 hover:text-white hover:bg-white/5 border-transparent"
								]}
								aria-current={currentPath === "/products/overview" ? "page" : undefined}
							>
								Products
							</a>

							<a
								href="/contact"
								class:list={[
									"px-4 py-3 text-sm font-medium transition-colors duration-200 border-l-4",
									currentPath === "/contact"
										? "text-primary border-primary bg-primary/10"
										: "text-grey-300 hover:text-white hover:bg-white/5 border-transparent"
								]}
								aria-current={currentPath === "/contact" ? "page" : undefined}
							>
								Contact
							</a>
						</nav>
					</div>
				</details>
			</div>
		</div>
	</div>
</header>

<style>
	/* Ensure proper focus styles for the disclosure summary */
	details[open] summary svg {
		transform: rotate(0deg);
	}

	/* Smooth transitions for mobile menu */
	details > div {
		animation: slideDown 0.2s ease-out;
	}

	@keyframes slideDown {
		from {
			opacity: 0;
			transform: translateY(-10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Hide scrollbar for mobile menu */
	details > div::-webkit-scrollbar {
		display: none;
	}
</style>
